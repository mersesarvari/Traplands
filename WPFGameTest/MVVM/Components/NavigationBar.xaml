<UserControl x:Class="WPFGameTest.MVVM.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGameTest.MVVM.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Navigation Demo" Grid.Column="0"/>
        <Button Command="{Binding NavigateMultiGameMenuCommand}" Grid.Column="1" Content="MultiplayerGameMenu"/>
        <Button Command="{Binding NavigateLevelEditorCommand}" Grid.Column="2" Content="Level Editor"/>
        <Button Command="{Binding NavigateSingleGameCommand}" Grid.Column="3" Content="Singleplayer Game"/>
    </Grid>
</UserControl>
