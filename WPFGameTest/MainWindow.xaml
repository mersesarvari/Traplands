<Window x:Name="GameWindow" x:Class="WPFGameTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGameTest"
        xmlns:renderer="clr-namespace:WPFGameTest.Renderer"
        xmlns:viewModel="clr-namespace:WPFGameTest.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Game" Background="Gray" Height="768" Width="1024" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" SizeChanged="GameWindow_SizeChanged">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>

    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding CurrentView}" Height="768" Width="1024"/>
    </Grid>
</Window>
